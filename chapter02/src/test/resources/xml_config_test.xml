<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:c="http://www.springframework.org/schema/c"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       https://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/util
       https://www.springframework.org/schema/util/spring-util.xsd">

    <!--使用这个类默认的构造来创建bean，注入字面量-->
    <bean id="goodMovieRecord" class="cn.wayne.xml_config.GoodMovieRecord">
        <constructor-arg value="地道战" />
        <constructor-arg value="中国优秀抗战影片" />
    </bean>

    <!--c命名空间可以简化构造器注入，注入字面量，c:属性名称 -->
    <bean id="goodMovieRecord2" class="cn.wayne.xml_config.GoodMovieRecord"
          c:title="地雷战" c:artist="中国优秀抗战影片"/>

    <!-- _0表示第一个属性 _1表示第二个属性，这两个属性都是String类型的 -->
    <bean id="goodMovieRecord3" class="cn.wayne.xml_config.GoodMovieRecord"
          c:_0="铁道游击队" c:_1="中国优秀抗战影片"/>

    <!--c命名空间无法实现集合装配-->
    <bean id="blackMovieRecord" class="cn.wayne.xml_config.BlackMovieRecord">
        <constructor-arg value="盗梦空间"/>
        <constructor-arg value="优秀科幻电影"/>
        <constructor-arg>
            <list>
                <value>准备入梦</value>
                <value>入梦</value>
                <value>入梦枪战</value>
            </list>
        </constructor-arg>
    </bean>

    <!-- 普通命名空间方式，构造器注入bean引用-->
    <bean id="appleMP4Player" class="cn.wayne.xml_config.AppleMP4Player">
        <constructor-arg ref="goodMovieRecord" />
    </bean>

    <!-- _0表示第一个构造参数  ref表示注入bean引用 -->
    <bean id="appleMP4Player2" class="cn.wayne.xml_config.AppleMP4Player"
          c:_0-ref="goodMovieRecord2" />

    <!-- 属性注入bean引用，使用setter方法-->
    <bean id="orangeMP4Player" class="cn.wayne.xml_config.OrangeMP4Player">
        <property name="movieRecord" ref="goodMovieRecord2"/>
    </bean>

    <!--使用p命名空间简化属性注入配置，movieRecord表示属性名称-->
    <bean id="orangeMP4Player2" class="cn.wayne.xml_config.OrangeMP4Player"
          p:movieRecord-ref="goodMovieRecord2"/>

    <!--属性装配，注入字面量和集合-->
    <bean id="redMovieRecord" class="cn.wayne.xml_config.RedMovieRecord">
        <property name="artist" value="白蛇传"/>
        <property name="title" value="中国民间爱情故事"/>
        <property name="scenes">
            <list>
                <value>断桥相遇</value>
                <value>许仙送伞</value>
                <value>两人结婚</value>
            </list>
        </property>
    </bean>

    <!--使用p命名空间来注入属性-->
    <bean id="redMovieRecord2"
          class="cn.wayne.xml_config.RedMovieRecord"
          p:artist="白蛇传" p:title="中国民间爱情故事">
        <property name="scenes">
            <list>
                <value>断桥相遇</value>
                <value>许仙送伞</value>
                <value>两人结婚</value>
            </list>
        </property>
    </bean>

    <!--使用util命名空间优化集合的使用-->
    <bean id="redMovieRecord3"
          class="cn.wayne.xml_config.RedMovieRecord"
          p:artist="白蛇传"
          p:title="中国民间爱情故事"
          p:scenes-ref="scenesList"/>

    <util:list id="scenesList">
        <value>断桥相遇</value>
        <value>许仙送伞</value>
        <value>两人结婚</value>
    </util:list>



</beans>